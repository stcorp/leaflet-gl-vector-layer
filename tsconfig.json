{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "checkJs": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018",
    "lib": ["es2019", "dom"],
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules", "**/*.json", "dist", "example"]
}
